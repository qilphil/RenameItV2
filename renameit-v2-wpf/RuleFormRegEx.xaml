             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:renameit ="clr-namespace:renameit_v2_wpf"            
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="445">
    <Grid>
        <CheckBox x:Name="chkCaseSensitive" Content="Case Sensitive" IsChecked="{Binding Path=caseSensitive, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="10,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.495,-0.6" Checked="chkCaseSensitive_Checked" Unchecked="chkCaseSensitive_Checked"/>
